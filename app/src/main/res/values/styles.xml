<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTextDescription">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EmptyStateText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LoanItemText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="LoanItemTitle" parent="LoanItemText">
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">@dimen/titleTextLineSpacingExtra</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LargeTitleSpanText">
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <style name="LargeTitleText" parent="LargeTitleSpanText">
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:layout_marginRight">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

    <style name="DescriptionText">
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/descriptionTextSize</item>
        <item name="android:textColor">@color/descriptionTextColor</item>
    </style>

    <style name="ColoredButton">
        <item name="android:layout_height">54dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="BlueSolidButton" parent="ColoredButton">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="GraySolidButton" parent="ColoredButton">
        <item name="android:background">@color/grayControlColor</item>
    </style>

    <style name="BlueGradientButton" parent="ColoredButton">
        <item name="android:background">@drawable/bg_blue_gradient</item>
    </style>

    <style name="GrayGradientButton" parent="ColoredButton">
        <item name="android:background">@drawable/bg_gray_gradient</item>
    </style>

</resources>
