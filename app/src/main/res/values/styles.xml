<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:progressTint">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTextDescription">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EmptyStateText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LoanItemText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="LoanItemTitle" parent="LoanItemText">
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">@dimen/titleTextLineSpacingExtra</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="LargeTitleSpanText">
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <style name="LargeTitleText" parent="LargeTitleSpanText">
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginLeft">@dimen/margin_default</item>
        <item name="android:layout_marginRight">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

    <style name="MediumTitleText" parent="LargeTitleText">
        <item name="android:textSize">@dimen/textSize_16sp</item>
    </style>

    <style name="SmallTitleText" parent="LargeTitleText">
        <item name="android:textSize">@dimen/textSize_14sp</item>
    </style>

    <style name="DescriptionText">
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/descriptionTextSize</item>
        <item name="android:textColor">@color/descriptionTextColor</item>
    </style>

    <style name="ColoredButton">
        <item name="android:layout_height">54dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="BlueSolidButton" parent="ColoredButton">
        <item name="android:background">@drawable/selector_blue_button</item>
    </style>

    <style name="GraySolidButton" parent="ColoredButton">
        <item name="android:background">@color/grayControlColor</item>
    </style>

    <style name="BlueGradientButton" parent="ColoredButton">
        <item name="android:background">@drawable/bg_blue_gradient</item>
    </style>

    <style name="GrayGradientButton" parent="ColoredButton">
        <item name="android:background">@drawable/bg_gray_gradient</item>
    </style>

    <style name="PercentageText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/darkGrayColor</item>
        <item name="android:textSize">48sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DefaultSeekBar" parent="@style/Widget.AppCompat.SeekBar">
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
        <item name="android:colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AccentDarkLargeTitle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/textSize_20sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ChartDescriptionTitleText">
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textSize">@dimen/textSize_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChartDescriptionSubTitleText">
        <item name="android:textColor">@color/descriptionTextColor</item>
        <item name="android:textSize">@dimen/textSize_13sp</item>
    </style>

    <style name="RedRadio">
        <item name="radioImage">@drawable/ic_radio_red</item>
    </style>

    <style name="BlueRadio">
        <item name="radioImage">@drawable/ic_radio_blue</item>
    </style>

    <style name="GreenRadio">
        <item name="radioImage">@drawable/ic_radio_green</item>
    </style>

    <style name="GrayRadio">
        <item name="radioImage">@drawable/ic_radio_gray</item>
    </style>

    <style name="NoteItemBoldText" parent="SmallTitleText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RiskInfoLightText" parent="DescriptionText">
        <item name="android:layout_margin">0dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#1c2a3c</item>
        <item name="android:textSize">@dimen/textSize_13sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RiskInfoText" parent="DescriptionText">
        <item name="android:layout_margin">0dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/textSize_16sp</item>
        <item name="android:textColor">#1c2a3c</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MarketNoteView">
        <item name="bottomTitle1">Cash</item>
        <item name="bottomTitle2">Discount</item>
        <item name="bottomTitle3">Risk Score</item>
    </style>

    <style name="SellOrdersNoteView">
        <item name="bottomTitle1">Cash</item>
        <item name="bottomTitle2">Discount</item>
        <item name="bottomTitle3">Days On Market</item>
    </style>

</resources>
