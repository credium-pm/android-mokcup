<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/inactiveControlLightColor"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_default"
    android:paddingTop="@dimen/margin_default">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title1Text"
            style="@style/RiskInfoLightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Title 1" />

        <TextView
            android:id="@+id/value1Text"
            style="@style/RiskInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Value 1" />

    </LinearLayout>

    <include layout="@layout/view_risk_info_vertical_separator" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title2Text"
            style="@style/RiskInfoLightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Title 2" />

        <TextView
            android:id="@+id/value2Text"
            style="@style/RiskInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Value 2" />

    </LinearLayout>

    <include layout="@layout/view_risk_info_vertical_separator" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title3Text"
            style="@style/RiskInfoLightText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Text 3" />

        <TextView
            android:id="@+id/value3Text"
            style="@style/RiskInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Value 3
" />

    </LinearLayout>

</LinearLayout>